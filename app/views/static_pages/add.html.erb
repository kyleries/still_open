      <div class="span1 offset3"><p class="blue">Closes</p></div>
      <div class="span1 offset4"><p class="blue">Comment</p></div>
    </div>
    
    <div class="row">
      <div class="span1 offset1"><input type="text"></input></div>
      <div class="span1 offset2"><input type="text"></input></div>
      <div class="span1 offset3"><input type="text"></input></div>
      <div class="span1 offset4"><input type="text"></input></div>
    </div>
    
    <div class="row">
      <div class="span1 offset1"><input type="text"></input></div>
      <div class="span1 offset2"><input type="text"></input></div>
      <div class="span1 offset3"><input type="text"></input></div>
      <div class="span1 offset4"><input type="text"></input></div>
    </div>
    
    <div class="row">
      <div class="span1 offset1"><input type="text"></input></div>
      <div class="span1 offset2"><input type="text"></input></div>
      <div class="span1 offset3"><input type="text"></input></div>
      <div class="span1 offset4"><input type="text"></input></div>
    </div>
  </div>
</div>

