<div class="row span6 offset2">
  <h3 class="blue b">ADD A BUSINESS</h3>
</div>

<div class="row span6 offset2">
  <h6 class="mbot0">Please check the business isn't already in the directory before creating a new entry.</h6>
  <h6 class="mtop0">* Mandatory Field</h6>
</div>

<div class="row">
  <div class="container-box span8 offset4">
    <h4>Business information</h4>
    <form class="form-horizontal">
      <div class="span5">
        <div class="control-group">
          <label class="control-label">Name*</label>
          <div class="controls">
            <input type="text" placeholder="Name">
          </div>
        </div>
    
        <div class="control-group">
          <label class="control-label">Location*</label>
          <div class="controls">
            <input type="text" placeholder="Location">
          </div>
        </div>
    
        <div class="control-group">
          <label class="control-label">Address*</label>
          <div class="controls">
            <input type="text" placeholder="Address">
          </div>
        </div>
    
        <div class="control-group">
          <label class="control-label">Postcode*</label>
          <div class="controls">
            <input type="text" placeholder="Postcode">
          </div>
        </div>
    
        <div class="control-group">
          <label class="control-label">Map</label>

        </div>
    
        <div class="control-group">
          <label class="control-label">Phone</label>
          <div class="controls">
            <input type="text" placeholder="Phone">
          </div>
        </div>
    
        <div class="control-group">
          <label class="control-label">Website</label>
          <div class="controls">
            <input type="text" placeholder="Website">
          </div>
        </div>
    
        <div class="control-group">
          <label class="control-label">Tags</label>
          <div class="controls">
            <input type="text" placeholder="Tags">
          </div>
        </div>
    </div>
    
    <div class="span3">
      <div class="control-group mtop100">
        <label class="control-label">Latitude</label>
        <div class="controls">
          <input type="text">
        </div>
      </div>
  
      <div class="control-group">
        <label class="control-label">Longitude</label>
        <div class="controls">
          <input type="text">
        </div>
      </div>
    </div>
    </form>
  </div>
</div>

